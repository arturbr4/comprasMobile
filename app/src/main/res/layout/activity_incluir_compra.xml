<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/gradient_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/incluir_compra_exibirFoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_camera_no_image_24dp" />

                <TextView
                    android:id="@+id/mostrar_preco_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Nome do Produto"
                    android:textColor="@color/white"
                    android:textSize="21sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.0"
            android:paddingLeft="30dp"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="20dp"
                android:src="@drawable/ic_attach_money_blue_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/incluir_compra_precoWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.7"
                android:textColorHint="@android:color/darker_gray"
                android:theme="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/incluir_compra_preco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Preco"
                    android:inputType="numberDecimal"/>

            </android.support.design.widget.TextInputLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.0"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="20dp"
                android:src="@drawable/ic_place_blue_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/incluir_compra_localWrapper"
                android:layout_width="0dp"
                android:layout_weight="2.7"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray"
                android:theme="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/incluir_compra_local"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:hint="Mercado"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.0"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="20dp"
                android:src="@drawable/ic_place_blue_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/incluir_compra_nomeLocalWrapper"
                android:layout_width="0dp"
                android:layout_weight="2.7"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray"
                android:theme="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/incluir_compra_nomeLocal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textNoSuggestions"
                    android:hint="Mercado"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3.0"
            android:paddingLeft="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:paddingTop="20dp"
                android:src="@drawable/ic_date_range_blue_24dp"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/incluir_compra_dataWrapper"
                android:layout_width="0dp"
                android:layout_weight="2.7"
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/darker_gray"
                android:theme="@style/TextAppearance.App.TextInputLayout">

                <EditText
                    android:id="@+id/incluir_compra_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data - Ex: 30.03.2018"
                    android:inputType="date"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>