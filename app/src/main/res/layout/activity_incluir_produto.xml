<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_nomeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do Produto"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_categoriaWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_categoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Categoria" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_quantidadeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quantidade"
                android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_unidadeWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_unidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unidade"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_precoWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_preco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Preco"
                android:inputType="numberDecimal"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_localWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mercado"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_dataWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data"
                android:inputType="date"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/incluir_produto_observacaoWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/darker_gray"
            android:theme="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/incluir_produto_observacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Observacoes"/>

        </android.support.design.widget.TextInputLayout>


    </LinearLayout>
</ScrollView>